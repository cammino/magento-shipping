<?xml version="1.0"?>
<config>
	<modules>
		<Cammino_Shipping>
			<version>0.1.0</version>
		</Cammino_Shipping>
	</modules>
	<global>
		<helpers>
			<camminoshipping>
				<class>Cammino_Shipping_Helper</class>
			</camminoshipping>
		</helpers>
		<models>
			<camminoshipping>
				<class>Cammino_Shipping_Model</class>
			</camminoshipping>
		</models>
		<sales>
			<shipping>
				<carriers>
					<correios>
						<class>Cammino_Shipping_Model_Carrier_Correios</class>
					</correios>
				</carriers>
			</shipping>
		</sales>
	</global>
	<default>
		<carriers>
			<correios>
				<active>0</active>
				<sallowspecific>0</sallowspecific>
				<model>cammino_shipping_model_carrier_correios</model>
				<name>correios</name>
				<title>Correios</title>
				<freepac>0</freepac>
				<sort_order>0</sort_order>
				<showmethod>1</showmethod>
			</correios>
		</carriers>
	</default>
    <crontab>
        <jobs>
            <correios_refresh_token>
                <schedule>
                    <cron_expr>0 */3 * * *</cron_expr>
                </schedule>
                <run>
                    <model>camminoshipping/carrier_correios::refreshToken</model>
                </run>
            </correios_refresh_token>
        </jobs>
    </crontab>
</config>